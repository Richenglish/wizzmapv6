<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>
	<fieldset>
		<legend>Sign In</legend>
		  <%= f.input :email %>
		  <%= f.input :password %>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input :remember_me, as: :boolean %></div>
		  <% end -%>

		  <div>
		  	<br />
		  	<%= f.button :submit, "Sign in", class: "button" %><br />
		  	<%= link_to "Not a user yet?  Sign up", new_registration_path(resource_name), class: "small button secondary" %>

		  </div>
	</fieldset>
<% end %>