<!-- Sign Up Form -->

<% if mobile_device? %>    <!-- Mobile -->
<div class="mobile-container">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
    <fieldset>
      <legend>Sign Up</legend>
        <%= f.input :profile_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <br />
        <%= f.button :submit, "Sign Up", class: "button" %>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
<% else %>

<br />
<div class="row">
  <div class="large-5 columns">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
        <fieldset>
          <legend>Sign Up</legend>
            <%= f.input :profile_name %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <div><%= f.button :submit, "Sign Up", class: "button small" %></div>
        </fieldset>
      <% end %>

   
  </div>
</div>

<% end %>