<!-- Sign Up Form -->

<% if mobile_device? %>    <!-- Mobile -->

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
    <fieldset>
      <legend>Sign Up</legend>
        <%= f.input :profile_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <div><%= f.button :submit, "Sign Up", class: "btn btn-info" %></div>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>


<% else %>



<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :profile_name %><br />
  	<%= f.text_field :profile_name %>
  </div>


  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>

<% end %>