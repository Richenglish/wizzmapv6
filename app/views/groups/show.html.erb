<!-- Group - Show -->
<!-- One Group Show -->

<% if mobile_device? %> <!-- Mobile -->

	<p id="notice"><%= notice %></p>
	<div>
	<%= @group.group_name %>
	</div>
	 <%= gmaps("map_options" => { :raw => "{styles: deskStyle}",  
	                              "detect_location" => true, 
                              	  "center_on_user" => false, 
	                              "auto_zoom" => false,
	                              "zoom" => 3,
	                              "class" => "gmaps4rails_mobilemap"},
	                              "markers" => { "data" => @json,
                                              "options" => {"custom_infowindow_class" => "infobox"} }) %>  

    <%= render 'points/mobilemenu' %>


<% else %>  <!-- Desktop -->
	<p id="notice"><%= notice %></p>
	<br />

	<div class="row-fluid">
		<div class="span9">
		 	<%= gmaps("map_options" => {  :raw => "{styles: deskStyle}",
                                  "detect_location" => true, 
                                  "center_on_user" => false, 
                                  "auto_zoom" => false},
                                  "markers" => { "data" => @json,
                                                  "options" => {"custom_infowindow_class" => "infobox"} }) %>  

		</div>
		<div class="span3">
			<div class="pointlist-head"><%= @group.group_name %></div>
			<div class="pointlist-subhead"><em>Author: </em> <%= @group.user.profile_name %> </div>
			<div class="pointlist-content"><%= @group.group_description %></div>
			<br />
			<br />
			<div class="pointlist-subhead">Points </div>
			<% if @points %>
				<% @points.each do |point| %>
					<div class="pointlist-block">
						<div class="pointlist-title"><%= link_to point.name, point %></div>
						<div class="pointlist-content"><%= point.content %></div>
					</div>
				
				<% end %>
			<% end %>

			<br />
        	<%= link_to ' Edit ', edit_group_path(@group), class: "btn btn-info" %> 



			
		</div>
	</div>
	
	<%= render 'points/infoboxscript' %>

<% end %>