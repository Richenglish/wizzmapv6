<!-- Group - Show -->
<!-- One Group Show -->

<% if mobile_device? %> <!-- Mobile -->

	<div class="map-label">
	<%= @group.group_name %>
	</div>
	 <%= gmaps("map_options" => { :raw => "{styles: deskStyle}",  
	                              "detect_location" => true, 
                              	  "center_on_user" => false, 
	                              "auto_zoom" => false,
	                              "zoom" => 3,
	                              "class" => "gmaps4rails_mobilemap"},
	                              "markers" => { "data" => @json,
                                              "options" => {"custom_infowindow_class" => "infobox"} }) %>  

    <%= render 'points/secondarymobilemenu' %>
    <%= render 'points/infoboxscript' %>

<% else %>  <!-- Desktop -->
	

	<div class="m-map">
	 	<%= gmaps("map_options" => {  :raw => "{styles: deskStyle}",
                              "detect_location" => true, 
                              "center_on_user" => false, 
                              "auto_zoom" => false},
                              "markers" => { "data" => @json,
                                              "options" => {"custom_infowindow_class" => "infobox"} }) %>  
        <%#= gmaps("map_options" => { :raw => "{styles: deskStyle}", 
                                        "center_latitude" => 43.8,
                                        "center_longitude" => -80,
                                        "detect_location" => false, 
                                        "center_on_user" => true, 
                                        "auto_adjust" => false,
                                        "zoom" => 8},
                                        "markers" => { "data" => @json,
                                                       "options" => {"custom_infowindow_class" => "infobox"} }) %>  
	</div>

	<div class="m-side">
		<br />

		<h3 class="subheader"><%= @group.group_name %></h3>

		<em>By: </em> <%= @group.user.profile_name %> <br />
		<p>
			<%= @group.group_description %>
		</p>
		<%= link_to 'Edit this Group', edit_group_path(@group), class: "button small" %> 
		
		<br />
		<br />
		
		<h3 class="subheader">Points </h3>
		<% if @points %>
			<% @points.each do |point| %>
				<%= link_to point.name, point %><br />
				<%= point.content %><br /><br />
			
			<% end %>
		<% end %>

		<%= link_to 'New Point', new_point_path, class: "button small" %></p>

		
	</div>
	
	
	<%= render 'points/infoboxscript' %>



<% end %>



