<!-- Profile display page -->


<% if mobile_device? %> <!-- Mobile -->
<div class="mobile-container">
	<%= @user.profile_name %>
	<br />
	
	<h5>My Groups</h5>
		<% if @groups %>
			<% @groups.each do |group| %>
				<%= group.group_name %><%= link_to 'Show', group %><br/>
			<% end %>
		<% end %>

	<h5>My Points</h5>
		<% if @points %>
			<% @points.each do |point| %>
				<%= point.name %><%= link_to 'Show', point %><br />
			<% end %>
		<% end %>
	
</div>




<% else %> <!-- Desktop -->

<div class="page-header">
	<h1> <%= @user.profile_name %> </h1>
<div>

<div class="row">

	<div class ="span9">
		<br />	
		<%= gmaps4rails(@json) %>
		<br />

		<h4>Actions</h4>
		<%= link_to 'New Point', new_point_path, class: "btn btn-success" %> <br />
		<%= link_to 'New Collection', new_group_path, class: "btn btn-success" %>
		<h4>Profile</h4>
		<%= link_to "Edit Profile", edit_user_registration_path, class: "btn" %>
	</div>

	<div class="span3">

		<h3>Points</h3>
		<% if @points %>
			<% @points.each do |point| %>
			<div class="well">
				<%= point.name %><br/>
				<%= point.content %><br/>
				<%= point.lat %><br/>
				<%= point.long %><br/>
			</div>
			<% end %>
		<% end %>

		<h3>Sets</h3>
		<% if @groups %>
			<% @groups.each do |group| %>
			<div class="well">
				<%= group.group_name %><br/>
				<%= group.group_description %><br/>
			</div>
			<% end %>
		<% end %>

	</div>
</div>

<% end %>