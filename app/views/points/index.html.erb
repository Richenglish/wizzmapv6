

<% if mobile_device? %> <!-- Mobile -->
    
    <%= gmaps4rails(@json) %>

    <div class="menu_mobile">
        <div id="action_but">
            <a href="javascript:toggleDiv('menu_two');" class="btn btn-block btn-info">Action</a>
        </div>
    </div>

    <div class="menu_mobile">  
        <div id="menu_two" class="btn-group btn-group-vertical">
            <%= link_to "Add Location", root_path, class: "btn btn-block" %>
            <%= link_to "Search", root_path, class: "btn btn-block" %>
            <a href="javascript:toggleDiv('menu_two');" class="btn btn-block">Clear</a>
        </div>
    </div>







<% else %>  <!-- Desktop -->
 
    <div class="page-header">   
        <h1>All points</h1>  
    </div>

<div class="row-fluid">
    <div class="span8">
        <%= gmaps4rails(@json) %>
    </div>

    <div class="span4">
        <h2>Data Points</h2>
        <table>
          
        <% @points.each do |point| %>
          <tr>
            <td><%= point.user.profile_name %></td>
            <td><%= point.name %></td>
            <td><%= point.content %></td>
            <td><%= point.lat %></td>
            <td><%= point.long %></td>
            <td><%= link_to 'Show', point %></td>
            <td><%= link_to 'Edit', edit_point_path(point) %></td>
            <td><%= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>

        <br />

        <%= link_to 'New Point', new_point_path, class: "btn btn-success" %>
    </div>
</div>

<% end %>





